<Alloy>
    <View id="Wrapper" name="Text">
		<Require type="widget" src="com.mcongrove.navigationBar" id="NavigationBar" text="Archivio Teatro Regio" />
    	
    	<View id="container">
    		<ScrollView id="mainview" >
    			<View id="breadcrumb">
					<Label id="breadcrumb_home" text="Home" />
		  		</View>
				<!-- foldersView = top part of screen, containing rows of folders, title and right buttons -->
		  		<View id="foldersView">
					<!-- header, with title and right buttons -->
		  			<View class="foldersTop">
		  				<View class="foldersTitle">
	  						<Label class="label" text="Folders" />
						</View>
	  					
		  				<View id="foldersButtons">
		  					<View id="foldersButtonsList">
		  						<Require type="widget" src="ti.ux.iconfont" icon="fa-th-large" left="12" size="36" color="#aaa" class="faIcon"/>
		  						<Require type="widget" src="ti.ux.iconfont" icon="fa-align-justify" left="12" size="36" color="#000" class="faIcon"/>
		  					</View>
		  					<View id="foldersButtonsBlocks">
		  						<Require type="widget" src="ti.ux.iconfont" icon="fa-th-large" left="12" size="36" color="#000" class="faIcon"/>
		  						<Require type="widget" src="ti.ux.iconfont" icon="fa-align-justify" left="12" size="36" color="#aaa" class="faIcon"/>
		  					</View>
		  				</View>
		  			</View>

		    		<View id="folderItemsList">
		    			<!-- folders created by main_folders_row.js -->
					</View>
		    		<View id="folderItemsBlocks">
		    			<!-- folders created by main_folder_block.js -->
					</View>
				</View>

				<!-- table = bottom part of screen, containing table of objects, title and right buttons -->
				<View id="objectsView">
					<!-- header, with title and right buttons -->
		  			<View class="foldersTop">
		  				<View class="foldersTitle">
	  						<Label class="label" text="Objects" />
						</View>
		  				<View id="objectsButtons">
		  					<View id="objectsButtonsList">
			  					<Require type="widget" src="ti.ux.iconfont" icon="fa-th-large" left="12" size="36" color="#000" class="faIcon"/>
			  					<Require type="widget" src="ti.ux.iconfont" icon="fa-align-justify" left="12" size="36" color="#aaa" class="faIcon"/>
		  					</View>
		  					<View id="objectsButtonsBlocks">
			  					<Require type="widget" src="ti.ux.iconfont" icon="fa-th-large" left="12" size="36" color="#aaa" class="faIcon"/>
			  					<Require type="widget" src="ti.ux.iconfont" icon="fa-align-justify" left="12" size="36" color="#000" class="faIcon"/>
		  					</View>
		  				</View>
		  			</View>
		  			<!-- objects = container for cells aka block to display one item -->
					<View id="objectBlocks">
						<!-- objects created by main_object_block.js  -->
						<!-- sample view for one object <View class="cell">
							<ImageView class="cellimage" image="/newport/cadre-plus-ipad.png" id="firstImage" />
							<Label class="objectName" text="Object 1" />
			    			<View class="objectRow2">
			    				<Label class="objectInfo" text="Item" />
			    				
			    				<View class="objectRow2Right">
			    					<Label class="infoIcon" text="i" />
			    				</View>
			    			</View>
			    		</View>-->
					</View>
					<View id="objectsList">
						<!-- objects created by main_object_row.js  -->
					</View>					
		        </View>
			</ScrollView>
			
	    	<ScrollView id="rightbar">
	    		<View id="rightbarContainer">
					<Label text="Last Modified" id="rightbarTitle"></Label>

		    	</View>
	    	</ScrollView>
    	</View>
    </View>
</Alloy>